<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Doubt id : "
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/manrope_bold"
            app:layout_constraintRight_toLeftOf="@id/tutorSeesStudentAllDoubtIdValue"
            android:id="@+id/tutorSeesStudentAllDoubtId"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tutorSeesStudentAllDoubtDate"
            android:layout_margin="4dp"
            android:padding="4dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="FMTDBT12346579"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/manrope_bold"
            android:id="@+id/tutorSeesStudentAllDoubtIdValue"
            app:layout_constraintLeft_toRightOf="@+id/tutorSeesStudentAllDoubtId"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textAlignment="viewEnd"
            app:layout_constraintBottom_toTopOf="@+id/tutorSeesStudentAllDoubtDate"
            android:layout_margin="4dp"
            android:padding="4dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Asked On : "
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/manrope_bold"
            app:layout_constraintRight_toLeftOf="@id/tutorSeesStudentAllDoubtDateValue"
            android:id="@+id/tutorSeesStudentAllDoubtDate"
            app:layout_constraintTop_toBottomOf="@+id/tutorSeesStudentAllDoubtId"
            android:layout_margin="4dp"
            android:padding="4dp"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="17/08/2021"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/manrope_bold"
            android:id="@+id/tutorSeesStudentAllDoubtDateValue"
            app:layout_constraintLeft_toRightOf="@+id/tutorSeesStudentAllDoubtDate"
            app:layout_constraintTop_toBottomOf="@+id/tutorSeesStudentAllDoubtId"
            app:layout_constraintRight_toRightOf="parent"
            android:textAlignment="viewEnd"
            android:layout_margin="4dp"
            android:padding="4dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Asked by : "
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/manrope_bold"
            app:layout_constraintRight_toLeftOf="@id/tutorSeesStudentAllDoubtByValue"
            android:id="@+id/tutorSeesStudentAllDoubtBy"
            app:layout_constraintTop_toBottomOf="@+id/tutorSeesStudentAllDoubtDateValue"
            android:layout_margin="4dp"
            android:padding="4dp"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Ishan Kumar is the best"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/manrope_bold"
            android:id="@+id/tutorSeesStudentAllDoubtByValue"
            app:layout_constraintLeft_toRightOf="@+id/tutorSeesStudentAllDoubtBy"
            app:layout_constraintTop_toBottomOf="@+id/tutorSeesStudentAllDoubtDateValue"
            app:layout_constraintRight_toRightOf="parent"
            android:textAlignment="viewEnd"
            android:layout_margin="4dp"
            android:padding="4dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>