<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"

         >
         <ImageView
             android:padding="16dp"
             android:layout_width="125dp"
             android:layout_height="125dp"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:src="@drawable/ic_user"
             android:id="@+id/imgTutor"
             />
         <TextView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             app:layout_constraintLeft_toRightOf="@+id/imgTutor"
             app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             android:text="ISHAN KUMAR"
             android:fontFamily="@font/manrope_bold"
             android:textColor="@color/black"
             android:textSize="20sp"
             android:padding="4dp"
             android:id="@+id/tutorName"
             />
         <TextView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             app:layout_constraintLeft_toRightOf="@+id/imgTutor"
             app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/tutorName"
             android:text="Age : 22"
             android:fontFamily="@font/manrope_bold"
             android:textColor="@color/black"
             android:textSize="12sp"
             android:padding="4dp"

             android:id="@+id/tutorAge"
             />
         <TextView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             app:layout_constraintLeft_toRightOf="@+id/imgTutor"
             app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/tutorAge"
             android:text="Preferred Class : Class 12"
             android:fontFamily="@font/manrope_bold"
             android:textColor="@color/black"
             android:textSize="12sp"
             android:padding="4dp"

             android:id="@+id/tutorClass"
             />
         <TextView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             app:layout_constraintLeft_toRightOf="@+id/imgTutor"
             app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/tutorClass"
             android:text="Speciality in : Maths"
             android:fontFamily="@font/manrope_bold"
             android:textColor="@color/black"
             android:textSize="12sp"
             android:padding="4dp"
             android:id="@+id/tutorSubject"
             />
         <TextView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             app:layout_constraintLeft_toRightOf="@+id/imgTutor"
             app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/tutorSubject"
             android:text="-/5"
             android:drawableLeft="@drawable/ic_baseline_star_24"
             android:fontFamily="@font/manrope_bold"
             android:textColor="@color/black"
             android:textSize="12sp"
             android:padding="4dp"

             android:id="@+id/tutorRating"
             />

     </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>