<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:src="@drawable/applogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"
        android:id="@+id/studentDeailsImgstudent"
        />
    <View
        android:id="@+id/student_details_horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginTop="24dp"
        android:background="@color/silver"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentDeailsImgstudent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ram Lal"
        app:layout_constraintTop_toBottomOf="@+id/student_details_horizontal_line"
        android:id="@+id/studentDetailsStudentName"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="8dp"
         
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Age : 30"
        app:layout_constraintTop_toBottomOf="@+id/studentDetailsStudentName"
        android:id="@+id/studentDetailsstudentAge"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="8dp"
         
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gender : Male"
        app:layout_constraintTop_toBottomOf="@+id/studentDetailsstudentAge"
        android:id="@+id/studentDetailsstudentGender"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="8dp"
         
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile No. : 7061021557"
        app:layout_constraintTop_toBottomOf="@+id/studentDetailsstudentGender"
        android:id="@+id/studentDetailsstudentMobileNumber"

        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="8dp"
         
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email id : kumarishaan01@gmail.com"
        app:layout_constraintTop_toBottomOf="@+id/studentDetailsstudentMobileNumber"
        android:id="@+id/studentDetailsstudentEmailId"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="8dp"
         
        android:visibility="gone"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parent Name : "
        app:layout_constraintTop_toBottomOf="@+id/studentDetailsstudentEmailId"
        android:id="@+id/studentDetailsstudentParentName"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="8dp"
         
        android:visibility="gone"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Class : Class 12"
        app:layout_constraintTop_toBottomOf="@+id/studentDetailsstudentParentName"
        android:id="@+id/studentDetailsstudentClass"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="8dp"
         
        android:visibility="gone"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Problem in subject : Maths"
        app:layout_constraintTop_toBottomOf="@+id/studentDetailsstudentClass"
        android:id="@+id/studentDetailsstudentLeastFavouriteSubject"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="8dp"
         
        android:visibility="gone"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="School Name : "
        app:layout_constraintTop_toBottomOf="@+id/studentDetailsstudentLeastFavouriteSubject"
        android:id="@+id/studentDetailsstudentSchoolName"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="8dp"
         
        android:visibility="gone"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/studentDetailsstudentSchoolName"
        android:textSize="16sp"
        android:textColor="@color/green"
        android:text="Approve ✓"
        android:padding="8dp"
        android:fontFamily="@font/manrope_bold"
        android:layout_marginTop="16dp"
        android:id="@+id/txtYesApprove"
        app:layout_constraintRight_toLeftOf="@+id/txtNotApprove"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/studentDetailsstudentSchoolName"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:textColor="@color/light_red_dark"
        android:text="Decline ✕"
        android:padding="8dp"
        android:fontFamily="@font/manrope_bold"
        app:layout_constraintLeft_toRightOf="@id/txtYesApprove"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/txtNotApprove"
        android:textAlignment="center"

        />

</androidx.constraintlayout.widget.ConstraintLayout>