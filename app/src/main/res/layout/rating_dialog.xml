<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="8dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/star1"
            android:text="Rate Tutor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/txtRateTutor"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/manrope_medium"
            android:textAlignment="center"
            android:padding="4dp"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_baseline_star_outline_24"
            android:background="@color/white"
            android:id="@+id/star1"
            app:layout_constraintTop_toBottomOf="@+id/txtRateTutor"
            app:layout_constraintBottom_toTopOf="@+id/btnSubmitRating"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/star2"
            android:scaleType="fitCenter"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_baseline_star_outline_24"
            android:background="@color/white"
            android:id="@+id/star2"
            app:layout_constraintTop_toBottomOf="@+id/txtRateTutor"
            app:layout_constraintBottom_toTopOf="@+id/btnSubmitRating"
            app:layout_constraintLeft_toRightOf="@+id/star1"
            app:layout_constraintRight_toLeftOf="@+id/star3"
            android:scaleType="fitCenter"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_baseline_star_outline_24"
            android:background="@color/white"
            android:id="@+id/star3"
            app:layout_constraintTop_toBottomOf="@+id/txtRateTutor"
            app:layout_constraintBottom_toTopOf="@+id/btnSubmitRating"
            app:layout_constraintLeft_toRightOf="@+id/star2"
            app:layout_constraintRight_toLeftOf="@+id/star4"
            android:scaleType="fitCenter"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_baseline_star_outline_24"
            android:background="@color/white"
            android:id="@+id/star4"
            app:layout_constraintTop_toBottomOf="@+id/txtRateTutor"
            app:layout_constraintBottom_toTopOf="@+id/btnSubmitRating"
            app:layout_constraintLeft_toRightOf="@+id/star3"
            app:layout_constraintRight_toLeftOf="@+id/star5"
            android:scaleType="fitCenter"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_baseline_star_outline_24"
            android:background="@color/white"
            android:id="@+id/star5"
            app:layout_constraintTop_toBottomOf="@+id/txtRateTutor"
            app:layout_constraintBottom_toTopOf="@+id/btnSubmitRating"
            app:layout_constraintLeft_toRightOf="@+id/star4"
            app:layout_constraintRight_toRightOf="parent"
            android:scaleType="fitCenter"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            app:layout_constraintTop_toBottomOf="@+id/star1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btnSubmitRating"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:backgroundTint="#F3D36A"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>